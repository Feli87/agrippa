{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ESNext"
    ],
    "rootDir": "src",
    "outDir": "bin",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "src/init/rc-template.json"
  ]
}